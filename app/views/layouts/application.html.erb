<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title><%= meta_title %></title>
    <meta name="description" content="<%= meta_description %>">

    <!-- Mobile Application -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable"  content="yes">
    <link rel="manifest" href="<%= asset_path 'manifest.json' %>">
    <%= render 'shared/ios_pwa_links' %>

    <!-- Facebook Open Graph data -->
    <meta property="og:title" content="<%= meta_title %>" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="<%= request.original_url %>" />
    <meta property="og:image" content="<%= meta_image %>" />
    <meta property="og:description" content="<%= meta_description %>" />
    <meta property="og:site_name" content="<%= meta_title %>" />

    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= stylesheet_pack_tag 'application', media: 'all' %> <!-- Uncomment if you import CSS in app/javascript/packs/application.js -->
    <link href="https://fonts.googleapis.com/css?family=Roboto+Mono:100,400,500,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Asap|Baloo+Tammudu+2|Fredoka+One&display=swap" rel="stylesheet">
    <%= favicon_link_tag asset_path('template_favicon.png') %>

    <script src="https://js.pusher.com/4.1/pusher.min.js"></script>
    <script>
      var pusher = new Pusher('3cee0a416587d4565b87', {
      cluster: 'eu',
      encrypted: true
    });

    </script>
    <!--Plugin CSS file with desired skin-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ion-rangeslider/2.3.0/css/ion.rangeSlider.min.css"/>
  </head>

  <body>

    <% unless params[:controller] == 'pages' && params[:action] == 'home' || params[:controller] == 'pages' && params[:action] == 'sign_up' %>

      <%= render 'shared/navbar' %>
      <%= render 'shared/top-mobile-nav' %>
    <% end %>
    <%= render 'layouts/messages' %>
        <%= yield %>

    <!-- <div class="notice"><%#= notice %></div> -->
    <!-- <div class="alert"><%= alert %></div> -->

    <%#= render 'shared/footer' %>

    <!--jQuery-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!--Plugin JavaScript file-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ion-rangeslider/2.3.0/js/ion.rangeSlider.min.js"></script>

    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
    <% unless params[:controller] == 'chats' && params[:action] == 'show' %>
      <%= render 'pages/bottom-navbar' %>
    <% end %>
  </body>
</html>
