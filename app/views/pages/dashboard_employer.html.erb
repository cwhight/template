<% listed_jobs = current_user.jobs.where({done: nil}) %>
<% applications = current_user.chats.reject {|ch| ch.request.shift.user || Time.parse(ch.request.shift.start_time) < Time.now }.size %>
<% closed_jobs = current_user.jobs.where({done: true}) %>
<% unread_messages = 0 %>
<% chats = current_user.chats %>
<% chats.each do |chat| %>
  <% unread_messages += chat.messages.select {|m| m.user != current_user && !m.read }.size %>
<% end %>
<% page = "profile" %>

<body style="">
  <div class="wrapper">
    <%= render 'pages/shared/employer_dashboard_sidebar', page: page %>
    <div class="container" id="content">
      <div class="selector py-3">
        <div id="profile-card" class="d-md-none dashboard-renders dashboard-card row align-items-center justify-content-around border-bottom">
          <%= render 'users/shared/profile-card', user: current_user %>
        </div>


        <div class="d-none d-md-block">
          <div id="profile-card" class="dashboard-renders dashboard-card row align-items-center justify-content-around border-bottom" style="min-height: 300px">
            <% user = current_user %>
            <div class="w-100 col-lg-4 profile-header">
              <h4 class="d-inline"><%= user.first_name %> <%= user.surname %></h4>
              <% score_array = user.reviews.map { |review| review.score } %>
              <% unless score_array.empty? %>
                <% average_score = score_array.reduce(:+).to_f / score_array.length %>
                <div>
                  <p><span ><i class="star fas fa-star"></i></span> <%= average_score.round(1) %> - <span class="skill-tag"><%= score_array.length %> reviews</span></p>
                </div>
              <% else %>
                <p>Review Score: No Reviews Yet </p>
              <% end %>
              <div class="d-flex ">
                <div class="pr-3 mr-3 w-30">


                  <% now = Time.now.to_date %>
                  <% dob = user.dob %>
                  <% age = now.year - dob.year - ((now.month > dob.month || (now.month == dob.month && now.day >= dob.day)) ? 0 : 1)%>
                  <p class="mx-1"><i class="fas fa-birthday-cake pink-icon"></i> <strong>Age: </strong><%= age %></p>
                  <p class="mx-1"><i class="red-marker fas fa-map-marker-alt"></i> <%= "South London" %></p>
                </div>

              </div>
            </div>
            <div class="each-render d-flex justify-content-around col-12 col-lg-4">

    <!--             <a class="btn btn-flat" href="https://connect.stripe.com/oauth/authorize?client_id=ca_GzHwY2wrwH0v9x65teLdTTG1a1mcyBly&state={STATE_VALUE}&scope=read_write&response_type=code&stripe_user[email]=cdwhight@gmail.com&stripe_user[url]=templatejobs.co.uk">STRIPE</a>
           --><div class="d-flex flex-column">
                <% if user.photo.attached? %>
                  <%= cl_image_tag user.photo.key, class: "avatar-large d-inline float-right shadow", crop: :fill  %>
                <% else %>
                  <%= image_tag "avatar.jpg", class: 'avatar-large shadow' %>
                <% end %>
                <% if current_user == user %>
                  <div class="d-flex justify-content-between align-items-center">

                    <div class="py-2">
                      <%= link_to 'Update', edit_user_path(current_user), class: "btn btn-ghost" %>
                    </div>

                  </div>
                <% else %>
                  <div class="d-flex align-items-right text-right">
                  </div>
                <% end %>
              </div>
            </div>
            <div class="col-4">
              <div class="w-50">
                <span class="m-1 p-1"><i class="fas fa-award green-marker mr-1 pr-1"></i>  Businesses</span>
                <div class="skills-row align-items-start">

                  <% venues = user.jobs.map do |job| %>
                    <% job.venue %>
                  <% end %>
                  <% venues.uniq.each do |venue|%>
                    <div class="skill-tag my-1 py-1">
                      <span  class="mx-1"><%= venue %></span>
                    </div>
                  <% end %>
                </div>
              </div>
              <p class="w-100 border-top border-bottom py-2 px-1" style="background-color: #fafafa"><em><%= user.summary%></em></p>
            </div>
          </div>
        </div>

          <div class="banner-2 row border-bottom">
            <div class="each-render col-12 col-lg-6">
              <div class="row btn py-0 d-flex justify-content-around" data-selector="messages">
                <div class="col-12">
                  <div class="btn dashboard-selector p-3 m-2">
                    <a href="/inbox" ><i class="profile-icon my-3 fas fa-inbox"></i></a>
                    <p>Inbox ( <%= unread_messages %> )</p>
                  </div>
                </div>
                <div class="col-12">
                  <div class="btn dashboard-selector p-3 m-2" data-selector="favourites">
                    <a href="/dashboard_employer/favourites" ><i class="my-3 profile-icon far fa-heart"></i></a>
                      <p>Favourites ( <%=  %> )</p>
                  </div>
                </div>
              </div>
            </div>
            <div class=" each-render col-12 col-lg-6"  >
              <div class="row px-0">
                <div class="col-12  d-flex justify-content-around pr-0">
                  <div class="btn dashboard-selector p-3 m-2" data-selector="pending-requests">
                    <a href="/active_applications" ><i class="my-3 profile-icon fas fa-user-tie"></i></a>
                      <p>Applications ( <%= applications %> )</p>
                  </div>
                </div>

                <div class="col-6 d-flex justify-content-around pr-0">
                  <div class="btn dashboard-selector p-3 m-2" data-selector="upcoming-jobs">
                    <a href="/dashboard_employer/listed_jobs" ><i class="my-3 profile-icon fas fa-clock"></i></a>
                      <p>Upcoming ( <%= listed_jobs.count %> )</p>
                  </div>
                </div>
                <div class="col-6 d-flex justify-content-around pl-0">
                  <div class="btn dashboard-selector p-3 m-2" data-selector="job-history">
                    <a href="/dashboard_employer/closed_jobs" ><i class="my-3 profile-icon fas fa-history"></i></a>
                      <p>JClosed Jobs ( <%= closed_jobs.count %> )</p>
                  </div>
                </div>
              </div>
            </div>
            <div class="each-render col-12 col-lg-6 pr-lg-0 d-flex align-items-stretch ">

            </div>
          </div>


          <div class="col-12">
            <%= render 'reviews/shared/view-reviews', user: current_user %>
          </div>




      </div>

    </div>
  </div>
  </div>
</body>



